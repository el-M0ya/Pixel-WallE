<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:AvaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PW.MainWindow"
        Icon="C:\000mio\Universidad\Programacion\Avalonia Pojects\WALL-E\Avalonia\PW\PW\Assets\WALL-E.png"
        Title="PW">

        <Design.DataContext>
        </Design.DataContext>
  
        <Grid Background="slategray"  ColumnDefinitions="* ,Auto">
                <Grid Grid.Column="1" Width="350" Background="#e0e0e0">
                        <Grid RowDefinitions="Auto , Auto ,  *  , 30">
                                <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="5">
                                        <Button Name = "_SaveScriptButton" Content="Save" Margin="2" Width="60"/>
                                        <Button  Margin="2" Width="60" Height="60" Click="_ChangeImg">
                                                <Image Source="C:\000mio\Universidad\Programacion\Avalonia Pojects\WALL-E\Avalonia\PW\PW\Assets\EVA.png" Stretch="Uniform" />
                                        </Button>
                                        <Button Name = "_LoadScriptButton" Content="Load" Margin="2" Width="60"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="5">
                                        <NumericUpDown x:Name="_CanvasSizeTextBox" Minimum="8" Maximum="64" Value="8" Width="120" Margin="2" FormatString="0"/>
                                        <Button Content="Apply" Name="_ResizeCanvasButton" Margin="2" Width="60"/>
                                </StackPanel>    

                                <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="5" MinWidth="200" Background="Azure">
                                        <AvaloniaEdit:TextEditor Name="_CodeEditorTextBox" FontFamily="Consolas , Menlo , Cascadia , Mono , Fira Code , monospace" FontSize = "14" ShowLineNumbers = "True" WordWrap="False" 
                                       HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Watermark="Write code for Wall-E here ..." />
                                </Border>  

                                <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5">
                                        <TextBlock Width="200" Height="25" Text="Error Block" Name="_StatusOutputTextBlock"  Background="Black" VerticalAlignment="Center" Margin="2" FontSize="8"/>
                                        <Button Content="Run" Name="_ExecuteButton" Margin="2" Width="60" Height="30" FontWeight="Bold"/>
                                </StackPanel>   

                        </Grid>
                </Grid>

                <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"> 
                        <Image Name="_PixelCanvasImage" Stretch="Uniform" MinWidth="100" MinHeight="100"/>
                </Border>
        </Grid>


        









































</Window>
